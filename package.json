{
  "name": "uenroll",
  "private": true,
  "license": "CC-BY-NC-SA-4.0",
  "author": "Raman Gupta",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "eslint": "^9.39.1",
      "typescript": "^5.9.3"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "ci:format": "prettier --check \"**/*.{js,jsx,ts,tsx,md}\"",
    "ci:format:packagejson": "sort-package-json --check ./**/package.json --ignore ./**/node_modules --ignore ./**/wasm/",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:packagejson": "sort-package-json ./**/package.json --ignore ./**/node_modules --ignore ./**/wasm",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "eslint": "catalog:",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sort-package-json": "^3.4.0",
    "tsup": "^8.5.0",
    "turbo": "^2.6.0",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.2",
  "engines": {
    "node": ">=22"
  }
}
