{
  "name": "uenroll",
  "private": true,
  "license": "CC-BY-NC-SA-4.0",
  "author": "Raman Gupta",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "eslint": "^9.39.2",
      "typescript": "^5.9.3"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter @repo/db --filter @repo/env --filter @repo/ui",
    "check-types": "turbo run check-types",
    "ci:format": "prettier --check \"**/*.{js,jsx,ts,tsx,md}\"",
    "ci:format:packagejson": "sort-package-json --check ./**/package.json --ignore ./**/node_modules --ignore ./**/wasm/",
    "db:down": "docker compose -f ./packages/db/docker-compose.yml down",
    "db:migrate": "turbo run --filter @repo/db db:migrate",
    "db:seed": "turbo run --filter @repo/db db:seed",
    "db:studio": "turbo run --filter @repo/db db:studio",
    "db:up": "docker compose -f ./packages/db/docker-compose.yml up -d && bun run db:migrate",
    "dev:scraper": "turbo run --filter uenroll-scraper dev",
    "dev:web": "turbo run --filter web dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:packagejson": "sort-package-json ./**/package.json --ignore ./**/node_modules --ignore ./**/wasm",
    "lint": "turbo run lint"
  },
  "dependencies": {
    "minimatch": "^10.1.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.4",
    "eslint": "catalog:",
    "oxfmt": "^0.35.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "sort-package-json": "^3.5.1",
    "tsup": "^8.5.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "bun@1.3.2"
}
