{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    // Base Options
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Strictness
    "noImplicitOverride": true,

    // Transpiling with TypeScript
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "@repo/env": ["../env/src/"]
    },
  },
  "include": ["src", "./drizzle.config.ts", "./drizzle/**/*.ts"]
}
