{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    // Base Options
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    // Strictness
    "noImplicitOverride": true,
    // Transpiling with TypeScript
    "outDir": "dist",
    "sourceMap": true,
    // Cloudflare Workers types
    "types": ["./worker-configuration.d.ts", "./service-bindings.d.ts"],
    "lib": ["ES2022"]
  },
  "include": ["./src/**/*.ts", "./worker-configuration.d.ts", "./service-bindings.d.ts"]
}
